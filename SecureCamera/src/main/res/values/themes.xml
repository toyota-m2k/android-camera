<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TryCamera" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
<!--        <item name="colorOutline">@color/color_outline</item>-->
        <item name="colorOutline">?attr/colorPrimary</item>
        <item name="colorAccent">@color/accent_color</item>

<!--        <item name="colorSurface">@color/white</item>-->
<!--        <item name="colorOnSurface">@color/black</item>-->
<!--        <item name="colorSurfaceVariant">@color/black</item>-->
<!--        <item name="colorOnSurfaceVariant">@color/white</item>-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="controlPanelColor">#40FFFFFF</item>
        <item name="iconColor">?attr/colorSecondary</item>
        <item name="recIconColor">#FF4080</item>
        <item name="pauseIconColor">#8080FF</item>
        <item name="stopIconColor">?attr/pauseIconColor</item>

        <item name="panelBackgroundColor">#40FFFFFF</item>
        <!-- libPlayer theme -->
        <item name="playerBackground">@color/white</item>
        <item name="splitterColor">@color/gray20</item>

        <item name="colorDialogSurface">?attr/colorSurface</item>
        <item name="colorOnDialogSurface">?android:textColorPrimary</item>
    </style>
