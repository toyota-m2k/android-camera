<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TryCamera" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent_color</item>


        <item name="controlPanelColor">#40000000</item>
        <item name="iconColor">?attr/colorSecondary</item>
        <item name="recIconColor">#FFFF4081</item>
        <item name="pauseIconColor">#8080FF</item>
        <item name="stopIconColor">?attr/pauseIconColor</item>

        <item name="panelBackgroundColor">#40000000</item>
        <item name="playerBackground">@color/black</item>
        <item name="splitterColor">@color/gray80</item>

        <item name="colorDialogSurface">?attr/colorSurface</item>
        <item name="colorOnDialogSurface">?android:textColorPrimary</item>
    </style>

    <color name="accent_color">#FFFF4081</color>
</resources>