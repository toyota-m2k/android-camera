<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image"
            android:scaleType="fitXY"
            android:padding="16dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_preview"
            android:scaleType="fitCenter"
            android:visibility="gone"
            />
        <io.github.toyota32k.secureCamera.dialog.CropMaskView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/crop_overlay"
            android:padding="16dp"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/size_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#80000000"
        android:textColor="#ffffff"
        android:padding="4dp"
        />
    <LinearLayout
        android:id="@+id/resize_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/colorOnPrimary"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <Button
            android:id="@+id/aspect_button"
            android:layout_width="60dp"
            android:layout_height="@dimen/media_button_height"
            android:padding="0dp"
            android:text="16:9"
            android:textColor="?attr/iconColor"
            android:background="?attr/selectableItemBackground"
            />
        <ImageButton
            android:id="@+id/memory_plus"
            android:layout_width="@dimen/media_button_width"
            android:layout_height="@dimen/media_button_height"
            app:srcCompat="@drawable/ic_memory_plus"
            app:tint="?attr/iconColor"
            android:background="?attr/selectableItemBackground"
            />
        <ImageButton
            android:id="@+id/memory_read"
            android:layout_width="@dimen/media_button_width"
            android:layout_height="@dimen/media_button_height"
            app:srcCompat="@drawable/ic_memory"
            app:tint="?attr/iconColor"
            android:background="?attr/selectableItemBackground"
            />
        <ImageButton
            android:id="@+id/max_button"
            android:layout_width="@dimen/media_button_width"
            android:layout_height="@dimen/media_button_height"
            app:srcCompat="@drawable/ic_full"
            app:tint="?attr/iconColor"
            android:background="?attr/selectableItemBackground"
            />
        <ImageButton
            android:id="@+id/resolution_button"
            android:layout_width="@dimen/media_button_width"
            android:layout_height="@dimen/media_button_height"
            app:srcCompat="@drawable/ic_deflate"
            app:tint="?attr/iconColor"
            android:background="?attr/selectableItemBackground"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/resolution_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resize_button_container"
        android:visibility="gone"
        tools:visibility="visible"
        >
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:clickable="true"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                style="@style/CameraActivityIconButton"
                app:icon="@drawable/ic_minus"
                />
            <com.google.android.material.slider.Slider
                android:id="@+id/resolution_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:valueFrom="10"
                android:valueTo="100"
                android:value="100"
                android:stepSize="1"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                style="@style/CameraActivityIconButton"
                app:icon="@drawable/ic_plus"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/button_480"
                android:layout_width="70dp"
                android:paddingHorizontal="0dp"
                android:layout_height="wrap_content"
                android:text="@string/resolution_480"
                style="@style/Widget.MaterialComponents.Button"
                />
            <Button
                android:id="@+id/button_720"
                android:layout_width="70dp"
                android:paddingHorizontal="0dp"
                android:layout_height="wrap_content"
                android:text="@string/resolution_720"
                android:layout_marginStart="5dp"
                style="@style/Widget.MaterialComponents.Button"
                />
            <Button
                android:id="@+id/button_1280"
                android:layout_width="70dp"
                android:paddingHorizontal="0dp"
                android:layout_height="wrap_content"
                android:text="@string/resolution_1280"
                android:layout_marginStart="5dp"
                style="@style/Widget.MaterialComponents.Button"
                />
            <Button
                android:id="@+id/button_1920"
                android:layout_width="70dp"
                android:paddingHorizontal="0dp"
                android:layout_height="wrap_content"
                android:text="@string/resolution_1920"
                android:layout_marginStart="5dp"
                style="@style/Widget.MaterialComponents.Button"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>