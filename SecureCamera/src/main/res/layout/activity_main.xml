<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <Space
                android:layout_height="@dimen/menu_button_spacing"
                android:layout_width="0dp"
                />

            <LinearLayout
                android:id="@+id/slot_container"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:paddingVertical="0dp"
                android:background="@drawable/shape_round"
                android:clipToOutline="true"
                tools:targetApi="31">
                <TextView
                    android:id="@+id/slot_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="?attr/colorPrimary"
                    tools:text="Slot-N"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/slot_button"
                    android:layout_width="33dp"
                    android:layout_height="40dp"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="6dp"
                    android:foregroundGravity="center"
                    app:icon="@drawable/ic_setting"
                    />

<!--                <ImageButton-->
<!--                    android:id="@+id/slot_button"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:srcCompat="@drawable/ic_tree"-->
<!--                    app:tint="?attr/colorPrimary"-->
<!--                    android:layout_gravity="center_vertical"-->
<!--                    android:background="?attr/selectableItemBackground"-->
<!--                    />-->

            </LinearLayout>
            <Button
                android:id="@+id/camera_button"
                android:layout_width="@dimen/menu_button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/camera"
                />
            <Button
                android:id="@+id/player_button"
                android:layout_marginTop="10dp"
                android:layout_width="@dimen/menu_button_width"
                android:layout_height="wrap_content"
                android:text="@string/player"
                />
            <Button
                android:id="@+id/server_button"
                android:layout_marginTop="20dp"
                android:layout_width="@dimen/menu_button_width"
                android:layout_height="wrap_content"
                android:text="@string/server"
                />
            <Button
                android:id="@+id/settings_button"
                android:layout_marginTop="10dp"
                android:layout_width="@dimen/menu_button_width"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                />
<!--            <Button-->
<!--                android:id="@+id/colors_button"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_width="@dimen/menu_button_width"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/colors"-->
<!--                />-->
<!--            <Button-->
<!--                android:id="@+id/clear_all_button"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_width="@dimen/menu_button_width"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/clear_all"-->
<!--                />-->
        </LinearLayout>
    </ScrollView>

</FrameLayout>