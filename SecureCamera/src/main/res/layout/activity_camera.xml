    <ImageView
        android:id="@+id/mini_shutter_indicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_photo"
        app:tint="@color/white"
        tools:ignore="ContentDescription" />

